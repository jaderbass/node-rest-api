<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="icon" href="/favicon.ico">
  <link rel="stylesheet" href="css/styles.css">
</head>
<body>
  <h1><%= heading %></h1>

  <!-- ? Flash success: Anzeige der Erfolgsmeldung oben auf der Seite -->
  <% if (success && success.length) { %>
    <div class="flash success"><%= success[0] %></div>
  <% } %>
  <!-- ? Flash error: Anzeige der Fehlermeldung oben auf der Seite -->
  <% if (error && error.length) { %>
    <div class="flash error"><%= error[0] %></div>
  <% } %>

  <ul>
    <% users.forEach( function(user) { %>
      <li>
        <a href="/users/<%= user.users_id %>"><%= user.users_name %></a>
        <form action="/users/<%= user.users_id %>" method="post">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit">LÃ¶schen</button>
        </form>
      </li>
    <% }); %>
  </ul>
</body>
</html>